<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <title>Twitter Clone</title>
  </head>
  <body>
    <header>
      <ul class='header-list'>
        <% if (user) { %>
          <a class='list-item' href='/'>Home</a>
          <a class='list-item' href='/logout'>Log out</a>
        <% } else { %>
          <a class='list-item' href='/signup'>Sign Up</a>
          <a class='list-item' href='/login'>Log in</a>
        <% } %>
      </ul>
    </header>
    <main class='main-box'>
      <form id="tweet-form" action="/tweets/create" method="POST">
        <textarea
          id="tweet-form-body"
          name="body"
          placeholder="What's happening?"></textarea>
        <button id="tweet-form-button">Tweet</button>
      </form>
      <!-- Use partial -->
      <% for(var i = 0; i < tweets.length; i++) { %>
        <%- include('_tweet', { tweet: tweets[i] }); %>
      <% } %>
    </main>
  </body>
</html>